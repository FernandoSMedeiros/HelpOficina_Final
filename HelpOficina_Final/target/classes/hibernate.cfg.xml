<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
      
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
   
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">4446472854</property>
    
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5433/OS</property>
    
        <property name="connection_pool_size">1</property>
    
        <property name="hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>
    
        <mapping class="model.entity.Usuario"/>
        <mapping class="model.entity.Cliente"/>
        <mapping class="model.entity.Endereco"/>
        <mapping class="model.entity.Telefone"/>
        <mapping class="model.entity.OrdemServico"/>
        <mapping class="model.entity.Aparelho"/>
        
        <mapping class="model.entity.Acompanhamento"/>
        <mapping class="model.entity.Orcamento"/>
        
    
    </session-factory>
</hibernate-configuration>
